@model SYSTEM_MANAGEMENT.Models.LIST_PERMISSIONS

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/css/ListPermission/listperEdit.css" rel="stylesheet"/>
<h2 style="text-align:center">Chỉnh sửa quyền</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PERMISSION_ID)

       
<div id="container_cate">
    <div class="editcontent">
        <div class="row">
            <div class="col">ID QUYỀN</div>
            <div class="colinput">
                @Html.EditorFor(model => model.PERMISSION_ID)
                @Html.ValidationMessageFor(model => model.PERMISSION_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">TÊN QUYỀN</div>
            <div class="colinput">
                @Html.EditorFor(model => model.PERMISSION_NAME)
                @Html.ValidationMessageFor(model => model.PERMISSION_NAME, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">MIÊU TẢ</div>
            <div class="colinput">
                @Html.EditorFor(model => model.DESCRIPTION)
                @Html.ValidationMessageFor(model => model.DESCRIPTION, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">ID CHỨC NĂNG</div>
            <div class="colinput">
                @Html.EditorFor(model => model.CONTROLLER_ID)
                @Html.ValidationMessageFor(model => model.CONTROLLER_ID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="action">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn  btn-success"><span class="glyphicon btn_save glyphicon-save"></span>Lưu</button>
                <a href="~/LIST_PERMISSIONS/Index" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
            </div>
        </div>
    </div>
</div>
}