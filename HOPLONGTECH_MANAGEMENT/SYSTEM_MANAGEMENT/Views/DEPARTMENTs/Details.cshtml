            @Html.EditorFor(model => model.NOTED, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly"} })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4"></div>
        @Html.LabelFor(model => model.USER.USERNAME, "USERNAME", htmlAttributes: new { @class = "control-label col-md-2"})
        <div class="col-md-2">
            @Html.EditorFor(model => model.USER.USERNAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>
</div>
    <p class="link">
        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.DEPARTMENT_ID }) |
