@model SYSTEM_MANAGEMENT.Models.DEPARTMENT

@{
    ViewBag.Title = "Details";
}
<link href="~/Content/css/Departments/detailDepart.css" rel="stylesheet"/>
<h2 class="h2">CHI TIẾT PHÒNG BAN</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DEPARTMENT_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.DEPARTMENT_NAME, "TÊN PHÒNG BAN", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.DEPARTMENT_NAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NOTED, "GHI CHÚ", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.NOTED, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.COMPANY.COMPANY_NAME, "TÊN CÔNG TY", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.COMPANY.COMPANY_NAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.USER.USERNAME, "USERNAME", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.USER.USERNAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-0 col-md-1">
                <a href="/DEPARTMENTs/Index"><img src="~/Content/images/back_icon.png" /></a>
            </div>
            <div class="col-md-offset-4 col-md-1">
                <a href="/DEPARTMENTs/Edit/@Model.DEPARTMENT_ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
            </div>
        </div>

    </div>
}
