@model SYSTEM_MANAGEMENT.Models.LIST_CONTROLLERS

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/css/List_Controller/listcontrollerEdit.css" rel="stylesheet" />
<h2 style="text-align:center">Chỉnh sửa chức năng hệ thống</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CONTROLLER_ID)
    <div id="container_cate">
        <div class="editcontent">
            <div class="row">
                <div class="col">TÊN HỆ THỐNG</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.CONTROLLER_NAME)
                    @Html.ValidationMessageFor(model => model.CONTROLLER_NAME, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="action">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn  btn-success"><span class="glyphicon btn_save glyphicon-save"></span>Lưu</button>
                    <a href="~/LIST_CONTROLLERS/Index" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
                </div>
            </div>
        </div>
    </div>
}
