@model SYSTEM_MANAGEMENT.Models.USER_METAS

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/css/UserMetas/Usermeta_Create.css" rel="stylesheet"/>
<h2 style="text-align:center">TẠO MỚI THÔNG TIN CHI TIẾT CÁ NHÂN</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div id="container_cate">
        <div class="editcontent">
            <div class="row">
                <div class="col">USER ID</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.USER_ID)
                    @Html.ValidationMessageFor(model => model.USER_ID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">ID PHÒNG BAN</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.DEPARTMENT_ID)
                    @Html.ValidationMessageFor(model => model.DEPARTMENT_ID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">GIỚI TÍNH</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.SEX)
                    @Html.ValidationMessageFor(model => model.SEX, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">NGÀY SINH</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.BIRTHDAY)
                    @Html.ValidationMessageFor(model => model.BIRTHDAY, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">NGÀY VÀO CÔNG TY</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.START_TIME)
                    @Html.ValidationMessageFor(model => model.START_TIME, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">SỐ ĐIỆN THOẠI</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.NUMBER_PHONE)
                    @Html.ValidationMessageFor(model => model.NUMBER_PHONE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">THÂM NIÊN</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.SENIORITY)
                    @Html.ValidationMessageFor(model => model.SENIORITY, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">QUÊ QUÁN</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.NATIVE_LAND)
                    @Html.ValidationMessageFor(model => model.NATIVE_LAND, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">TRÌNH ĐỘ HỌC VẤN</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.LITERACY)
                    @Html.ValidationMessageFor(model => model.LITERACY, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="action">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn_icon_create btn-success"><span class="fa icon_back fa-plus-circle" aria-hidden="true"></span>Tạo mới</button>
                    <button type="reset" class="btn btn_icon_delete btn-success"><span class="fa icon_back fa-ban" aria-hidden="true"></span>Hủy bỏ</button>
                    <a href="~/USERs/Index" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
                </div>
            </div>
        </div>
    </div>
}