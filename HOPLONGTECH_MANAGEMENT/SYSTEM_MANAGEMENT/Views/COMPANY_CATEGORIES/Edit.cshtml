@model SYSTEM_MANAGEMENT.Models.COMPANY_CATEGORIES

@{
    ViewBag.Title = "Edit";
}

<link href="~/Content/css/Company_CateGories/Com_CateEdit.css" rel="stylesheet" />
<h2 style="text-align: center">CHỈNH SỬA NHÓM CÔNG TY</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.COMPANY_CATEGORY_ID)
    <div id="container_cate">
        <div class="editcontent">
            <div class="row">
                <div class="col">TÊN NHÓM CÔNG TY</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.COMPANY_CATEGORY_NAME)
                    @Html.ValidationMessageFor(model => model.COMPANY_CATEGORY_NAME, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">GHI CHÚ</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.NOTED)
                    @Html.ValidationMessageFor(model => model.NOTED, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="action">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn  btn-success"><span class="glyphicon btn_save glyphicon-save"></span>Lưu</button>
                    <a href="~/COMPANY_CATEGORIES/Index" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
                </div>
            </div>

        </div>
    </div>

}


