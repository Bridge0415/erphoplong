@model SYSTEM_MANAGEMENT.Models.GHI_CHU_CONG_VIEC

@{
    ViewBag.Title = "Cập nhật ghi chú";
}
<link href="~/Content/css/Ghichu/editGhichu.css" type="text/css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="~/Content/js/editghichu.js" type="text/javascript"></script>

<h2 style="text-align:center">Cập nhật ghi chú</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NOTED_ID)
    @Html.HiddenFor(model => model.USER_ID)
    <div id="container_cate">
        <div class="editcontent">
            <div class="row">
                <div class="col">NGÀY GHI CHÚ</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.DATE_NOTED)
                    @Html.ValidationMessageFor(model => model.DATE_NOTED, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">TÊN GHI CHÚ</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.NOTED_NAME)
                    @Html.ValidationMessageFor(model => model.NOTED_NAME, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">THÔNG TIN GHI CHÚ</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.NOTED_INFO)
                    @Html.ValidationMessageFor(model => model.NOTED_INFO, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">ĐÃ HOÀN THÀNH</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.IS_DONE)
                    @Html.ValidationMessageFor(model => model.IS_DONE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">NGÀY HOÀN THÀNH</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.DATE_DONE)
                    @Html.ValidationMessageFor(model => model.DATE_DONE, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="action">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn  btn-success"><span class="glyphicon btn_save glyphicon-save"></span>Lưu</button>
                    <a href="~/GHI_CHU_CONG_VIEC/Danh_Sach_Ghi_Chu" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
                </div>
            </div>
        </div>
    </div>
}
