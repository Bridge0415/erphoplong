@model SYSTEM_MANAGEMENT.Models.CUSTOMER_GROUPS

@{
    ViewBag.Title = "Details";
}
<link href="~/Areas/HopLong/Style/CustomerGroup/details.css" rel="stylesheet"/>
<h2 style="text-align:center">CHI TIẾT NHÓM KHÁCH HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MA_NHOM_KHACH)

    <div id="container_cate">
        <div class="editcontent">
            <div class="row">
                <div class="col">TÊN CÔNG TY</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.TEN_NHOM_KHACH, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TEN_NHOM_KHACH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">GHI CHÚ</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.MO_TA, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MO_TA, "", new { @class = "text-danger" })
                </div>
            </div>    
        </div>
        <div class="action">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="~/HopLong/CUSTOMER_GROUPS/Edit/@Model.MA_NHOM_KHACH" class="btn btn_icon_edit btn-default"><span class="fa icon_back fa-pencil-square-o"></span>Chỉnh sửa</a>
                    <a href="~/HopLong/CUSTOMER_GROUPS/Index" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
                </div>
            </div>
        </div>
    </div>
}