@model IEnumerable<SYSTEM_MANAGEMENT.Models.CUSTOMER_GROUPS>

@{
    ViewBag.Title = "Index";
}
<link href="~/Areas/HopLong/Style/CustomerGroup/index.css" rel="stylesheet" />
<h2 style="text-align:center">NHÓM KHÁCH HÀNG</h2>
<a href="~/HopLong/CUSTOMER_GROUPS/Create" class="btn create btn-default"><span class="glyphicon icon-create glyphicon-plus"></span>Thêm mới</a>



<body>
    <div class="container">

        <div class="creatediv1 marginTop30">

            <div class="row margin-top-50">
                <div class="col-md-12">
                    <div class="panel panel-primary filterable">
                        <div class="main">
                            <table class="span12" border="1">
                                <div class="bg tablescroll">
                                    <table class="table table-bordered table-striped">
                                        <tr class="filters">
                                            <th>
                                                TÊN NHÓM KHÁCH
                                            </th>
                                            <th>
                                                MÔ TẢ
                                            </th>
                                            <th>
                                                <em class="fa fa-cog"></em>
                                            </th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TEN_NHOM_KHACH)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MO_TA)
                                                </td>
                                                <td>
                                                    <a href="/HopLong/CUSTOMER_GROUPS/Edit/@item.MA_NHOM_KHACH" class="btn btn_icon_edit btn-default"><span class="fa icon fa-pencil-square-o" aria-hidden="true"></span>Sửa</a> &nbsp;&nbsp;
                                                    <a href="/HopLong/CUSTOMER_GROUPS/Details/@item.MA_NHOM_KHACH" class="btn btn_icon_details btn-default"><span class="fa icon fa-info-circle" aria-hidden="true"></span>Chi tiết</a> &nbsp;&nbsp;
                                                    <a href="/HopLong/CUSTOMER_GROUPS/Delete/@item.MA_NHOM_KHACH" class="btn btn_icon_delete btn-default"><span class="fa icon fa-trash-o" aria-hidden="true"></span>Xóa</a> &nbsp;&nbsp;
                                                 </td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>