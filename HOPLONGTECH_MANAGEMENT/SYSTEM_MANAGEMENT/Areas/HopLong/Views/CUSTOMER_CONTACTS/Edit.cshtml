                    @Html.ValidationMessageFor(model => model.NGUOI_LIEN_HE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">NGÀY SINH</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.NGAY_SINH)
                    @Html.ValidationMessageFor(model => model.NGAY_SINH, "", new { @class = "text-danger" })
