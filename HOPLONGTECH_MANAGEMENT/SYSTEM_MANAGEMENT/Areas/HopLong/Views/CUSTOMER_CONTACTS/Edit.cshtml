@model SYSTEM_MANAGEMENT.Models.CUSTOMER_CONTACTS

@{
    ViewBag.Title = "Edit";
}
<link href="~/Areas/HopLong/Style/CustomerContact/edit.css" rel="stylesheet"/>
<h2 style="text-align:center">CHỈNH SỬA LIÊN HỆ KHÁCH HÀNG</h2>


