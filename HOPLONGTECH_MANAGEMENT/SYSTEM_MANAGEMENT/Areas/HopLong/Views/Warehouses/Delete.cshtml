@model SYSTEM_MANAGEMENT.Models.Warehouse

@{
    ViewBag.Title = "Delete";
}
<link href="~/Areas/HopLong/Style/Warehouse/WarehouseDelete.css" rel="stylesheet"/>
<h2 style="text-align:center">Xóa danh sách kho</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MA_KHO)
    <div id="container_cate">
        <div class="editcontent">
            <div class="row">
                <div class="col">TÊN KHO</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.TEN_KHO, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TEN_KHO, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">MÔ TẢ</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.MO_TA, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MO_TA, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">TÊN CÔNG TY</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.COMPANY.COMPANY_NAME, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.COMPANY.COMPANY_NAME, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="action">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn_icon_delete btn-success"><span class="fa icon_back fa-trash-o" aria-hidden="true"></span>Xóa</button>
                    <a href="~/HopLong/Warehouses/Index" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
                </div>
            </div>
        </div>
    </div>
}