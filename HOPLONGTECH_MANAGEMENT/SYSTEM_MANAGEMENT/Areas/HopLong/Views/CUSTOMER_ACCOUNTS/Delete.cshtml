@model SYSTEM_MANAGEMENT.Models.CUSTOMER_ACCOUNTS

@{
    ViewBag.Title = "Delete";
}
<link href="~/Areas/HopLong/Style/CustomerAccount/delete.css" rel="stylesheet"/>
<h2 style="text-align:center">XÓA TÀI KHOẢN KHÁCH HÀNG</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MA_KHACH_HANG)
    <div id="container_cate">
        <div class="editcontent">
            <div class="row">
                <div class="col">SỐ TÀI KHOẢN</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.SO_TAI_KHOAN, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.SO_TAI_KHOAN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">TÊN NGÂN HÀNG</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.TEN_NGAN_HANG, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TEN_NGAN_HANG, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">CHI NHÁNH</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.CHI_NHANH, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.CHI_NHANH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">TỈNH/THÀNH PHỐ</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.TINH_TP, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TINH_TP, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col">TÊN KHÁCH HÀNG</div>
                <div class="colinput">
                    @Html.EditorFor(model => model.CUSTOMER.TEN_KHACH_HANG, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.CUSTOMER.TEN_KHACH_HANG, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="action">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn_icon_delete btn-success"><span class="fa icon_back fa-trash-o" aria-hidden="true"></span>Xóa</button>
                    <a href="~/HopLong/CUSTOMER_ACCOUNTS/Index" class="btn btn_icon_back btn-default"><span class="fa icon_back fa-arrow-circle-left"></span>Trở về</a>
                </div>
            </div>
        </div>
    </div>
}